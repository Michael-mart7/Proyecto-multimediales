                                span.ms-3 +57 3027391665
                            
                            .item-contacto.d-flex.mb-3
                                svg.icon-tabler.icon-tabler-mail(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none')
